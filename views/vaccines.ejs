<h3>Confirmed Cases</h3>
<hr>
<div class="container-fluid">
    <div class="row" style="overflow-x: auto; font-size: 1vw;">
        <table class="table table-striped table-hover" id="vaccinated">
            <thead>
                <th scope="col">Coutry</th>
                <th scope="col">Vaccines Administered</th>
                <th scope="col">People Vaccinated</th>
                <th scope="col">People Partially Vaccinated</th>
            </thead>
            <tbody>
                <% vac.Vaccines.forEach((el, index)=> {%>
                    <tr>
                        <td>
                            <%= el.country %>
                        </td>
                        <td>
                            <%= Intl.NumberFormat().format(el.administered) %>
                        </td>
                        <td>
                            <%= Intl.NumberFormat().format(el.vaccinated) %>
                        </td>
                        <td>
                            <%= Intl.NumberFormat().format(el.partially) %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <canvas id="myChart"></canvas>
        </div>
        <div class="col-6">

        </div>
    </div>
</div>
<script>
    //setup
    const data = {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderWidth: 1
            }]
    };

    //options
    const options = {
        plugins: {
            legend: {
                display: false
            }
        }
    }

    //config
    const config = {
        type: 'pie',
        data,
        options
    };

    //render
    const myChart = new Chart(
        document.getElementById('myChart'),
        config
    );
    </script>