<h3>Confirmed Cases</h3>
<hr>
<section name="table">
    <div class="container-fluid">
        <div class="row" style="overflow-x: auto; font-size: 1vw;">
            <table class="table table-striped table-hover" id="confirmed">
                <thead>
                    <th scope="col">Country</th>
                    <th scope="col">Population</th>
                    <th scope="col">Confirmed Cases</th>
                    <th scope="col">Percentage</th>
                </thead>
                <tbody>
                    <% confirmed.Confirmed.forEach((el, index)=> {%>
                        <tr>
                            <td>
                                <%= el.country %>
                            </td>
                            <td>
                                <%= Intl.NumberFormat().format(el.population) %>
                            </td>
                            <td>
                                <%= Intl.NumberFormat().format(el.confirmed) %>
                            </td>
                            <td>
                                <%= Intl.NumberFormat('en-US',{ style: 'percent' , minimumFractionDigits: 2,
                                    maximumFractionDigits: 2 }).format((el.confirmed/el.population)) %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</section>
<hr>
<section name="chart">
    <h4>Top 10 countries with highest number of confirmed cases</h4>
    <div class="container my-3">
        <div class="row justify-content-center">
            <div class="col-6">
                <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>
</section>
<script>

    //Setup DataTables library
    var table = $('#confirmed').DataTable({
        "order": [2, 'desc']
    });

    //Get table data to use it in the chart
    var row = table.rows().data()
    var labels = []
    var chartData = []
    var colors = []

    for (let i = 1; i <= 10; i++) {
        labels.push(row[i][0])
        chartData.push(parseInt(row[i][2].split(',').join('')))
        colors.push(getRandomColor())
    }

    //setup
    function getRandomColor() {
        var r = Math.floor(Math.random() * 255);
        var g = Math.floor(Math.random() * 255);
        var b = Math.floor(Math.random() * 255);
        return "rgba(" + r + "," + g + "," + b + ", 0.3)";
    }

    const data = {
        labels: labels,
        datasets: [{
            label: '# of Confirmed Cases',
            data: chartData,
            backgroundColor: colors,
            borderWidth: 1
        }]
    };

    //options
    const options = {
        plugins: {
            legend: {
                position: 'right',
            }
        }
    }

    //config
    const config = {
        type: 'pie',
        data,
        options
    };

    //render
    const myChart = new Chart(
        document.getElementById('myChart'),
        config
    );
</script>